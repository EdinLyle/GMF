{
  "appId": "com.promptinjection.manager",
  "productName": "GMF(提示词注入管理器)",
  "directories": {
    "output": "dist",
    "buildResources": "build"
  },
  
  "files": [
    "app/dist/**/*",
    "app/renderer/dist/**/*",
    "app/renderer/public/**/*",
    "node_modules/**/*",
    "package.json"
  ],
  "extraResources": [
    {
      "from": "app/main/dist",
      "to": "app/main/dist"
    },
    {
      "from": "app/renderer/dist",
      "to": "app/renderer/dist"
    },
    {
      "from": "app/renderer/public",
      "to": "app/renderer/dist"
    },
    {
      "from": "database",
      "to": "database"
    }
  ],
  "win": {
    "target": [
      {
        "target": "nsis",
        "arch": ["x64"]
      }
    ],
    "icon": "build/icon.ico"
  },
  "nsis": {
    "oneClick": false,
    "allowToChangeInstallationDirectory": true,
    "createDesktopShortcut": true,
    "createStartMenuShortcut": true,
    "shortcutName": "GMF(提示词注入管理器)"
  },
  "mac": {
    "target": "dmg",
    "icon": "build/icon.icns"
  },
  "linux": {
    "target": "AppImage",
    "icon": "build/icon.png"
  }
}